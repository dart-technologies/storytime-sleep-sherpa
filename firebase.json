{
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log"
            ],
            "predeploy": [
                "npm --prefix \"$RESOURCE_DIR\" run build"
            ]
        }
    ],
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "public": "public",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/storyPlay",
                "function": "storyPlay"
            },
            {
                "source": "/admin",
                "function": "adminFeatured"
            },
            {
                "source": "/admin/**",
                "function": "adminFeatured"
            },
            {
                "source": "/s",
                "function": "share"
            },
            {
                "source": "/s/**",
                "function": "share"
            }
        ]
    },
    "react-native": {
        "crashlytics_debug_enabled": true
    }
}
