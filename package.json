{
    "name": "storytime",
    "main": "expo-router/entry",
    "version": "1.1.0",
    "scripts": {
        "start": "expo start",
        "android": "expo run:android",
        "ios": "expo run:ios",
        "build:ios:sim": "eas build --local -p ios --profile development-simulator",
        "build:ios:dev": "eas build -p ios --profile development",
        "build:ios:prod": "eas build -p ios --profile production --non-interactive",
        "update:ios": "eas update -p ios --channel production",
        "web": "expo start --web",
        "test": "jest --watchAll",
        "test:ci": "CI=1 node ./node_modules/jest/bin/jest.js --watchman=false --runInBand",
        "test:coverage": "CI=1 node ./node_modules/jest/bin/jest.js --watchman=false --runInBand --coverage",
        "doctor": "npx expo-doctor",
        "lint": "expo lint",
        "typecheck": "npx tsc --noEmit"
    },
    "expo": {
        "doctor": {
            "reactNativeDirectoryCheck": {
                "exclude": [
                    "@livekit/react-native",
                    "@livekit/react-native-webrtc"
                ]
            }
        }
    },
    "jest": {
        "preset": "jest-expo",
        "collectCoverageFrom": [
            "<rootDir>/{app,components,hooks,lib,services,functions/src}/**/*.{ts,tsx}",
            "!<rootDir>/**/*.d.ts",
            "!<rootDir>/**/__tests__/**",
            "!<rootDir>/**/?(*.)+(spec|test).{ts,tsx}"
        ],
        "coverageReporters": [
            "text",
            "json-summary",
            "lcov"
        ],
        "transformIgnorePatterns": [
            "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg|tinybase|@tinybase/tinybase-react)"
        ]
    },
    "dependencies": {
        "@config-plugins/react-native-webrtc": "^13.0.0",
        "@elevenlabs/react-native": "^0.5.7",
        "@livekit/react-native": "^2.9.6",
        "@livekit/react-native-expo-plugin": "^1.0.1",
        "@livekit/react-native-webrtc": "^137.0.2",
        "@react-native-firebase/analytics": "^23.7.0",
        "@react-native-firebase/app": "^23.7.0",
        "@react-native-firebase/auth": "^23.7.0",
        "@react-native-firebase/crashlytics": "^23.7.0",
        "@react-native-firebase/firestore": "^23.7.0",
        "@react-native-google-signin/google-signin": "^16.1.1",
        "expo": "~54.0.0",
        "expo-apple-authentication": "~8.0.8",
        "expo-asset": "~12.0.12",
        "expo-audio": "~1.1.1",
        "expo-auth-session": "^7.0.10",
        "expo-blur": "^15.0.8",
        "expo-build-properties": "~1.0.10",
        "expo-constants": "~18.0.12",
        "expo-crypto": "^15.0.8",
        "expo-dev-client": "~6.0.20",
        "expo-file-system": "^19.0.21",
        "expo-font": "~14.0.10",
        "expo-haptics": "~15.0.8",
        "expo-image": "~3.0.11",
        "expo-image-manipulator": "~14.0.8",
        "expo-image-picker": "~17.0.10",
        "expo-keep-awake": "~15.0.8",
        "expo-linear-gradient": "~15.0.8",
        "expo-linking": "~8.0.11",
        "expo-network": "~8.0.8",
        "expo-router": "~6.0.21",
        "expo-status-bar": "~3.0.9",
        "expo-updates": "~29.0.15",
        "livekit-client": "^2.16.1",
        "react": "19.1.0",
        "react-dom": "19.1.0",
        "react-native": "0.81.5",
        "react-native-reanimated": "~4.1.1",
        "react-native-safe-area-context": "~5.6.0",
        "react-native-screens": "~4.16.0",
        "react-native-web": "^0.21.0",
        "react-native-worklets": "0.5.1",
        "tinybase": "^7.3.0"
    },
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@testing-library/jest-native": "^5.4.3",
        "@testing-library/react-native": "^13.3.3",
        "@types/jest": "29.5.14",
        "@types/react": "~19.1.10",
        "eslint": "^9.0.0",
        "eslint-config-expo": "~10.0.0",
        "jest": "^29.2.1",
        "jest-expo": "~54.0.0",
        "typescript": "^5.3.3"
    },
    "private": true
}